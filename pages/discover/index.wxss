/* pages/discover/index.wxss */
page,
.page,
.page__bd{
    height: 100%;
}
.page__bd{
    padding-bottom: 0;
}
.weui-tab__content{
    text-align: center;
    width: 100%
}
.weui-navbar__item.weui-bar__item_on{
  color: #333
}
.weui-navbar__item{
  color: #C7C7C7;
  padding: 10rpx 0;
}
.weui-navbar{
  border: none;
  position: fixed;
  top: 0;
  left: 0;
  height: 34px;
  background: #E8E8E8
}

.discover-setout{
  position: fixed;
  top: 34px;
  width: 100%;
  padding: 10rpx 30rpx;
  font-size: 26rpx;
  color: #C7C7C7;
  box-sizing: border-box;
  overflow: hidden;
  background: #E8E8E8
}

.discover-setout-btn{
  float: right
}
.weui-tab__panel{
  padding-top: 60px
}

/* 卡片 */
.contain-box{
  margin: 40rpx 30rpx;
  border-radius: 22rpx;
  box-shadow: 0 0 1px 1px #D8D8D8;
}
.contain-item{
  background: #fff;
}
.contain-item-img{
  width: 100%;
  display: block;
  border-top-left-radius: 22rpx;
  border-top-right-radius: 22rpx;
}
.contain-item-box{
  padding: 30rpx;
}
.contain-item-tit{
  font-size: 30rpx;
  text-align: left;
  padding-bottom: 20rpx;
}
.contain-item-detail{
  width: 100%;
  text-align: left;
  overflow: hidden
}
.contain-item-detail image{
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  display: block;
  float: left
}
.contain-item-detail view{
  height: 70rpx;
  line-height: 70rpx;
  float: right;
  margin-left: 20rpx;
  font-size: 26rpx;
  color: #C5C5C5
}
.contain-item-detail view:first-of-type{
  height: 70rpx;
  line-height: 70rpx;
  float: left;
  margin-left: 20rpx;
  font-size: 26rpx;
  color: #333
}

/* 选中 */
.active.discover-setout-btn text:first-of-type{
  color: #333
}
.active.onclick.discover-setout-btn text:nth-of-type(2){
  color: #333
}
.active.onclicks.discover-setout-btn text:nth-of-type(3){
  color: #333
}