/* pages/join21days/index.wxss */

.contain-box{
  margin: 0 30rpx 30rpx;
  border-radius: 22rpx;
  background: #fff;
  box-shadow: 0 0 1px 1px #D8D8D8
}
.contain-item-img{
  width: 100%;
  display: block;
  border-top-left-radius: 16rpx;
  border-top-right-radius: 16rpx;
}
.contain-item-box{
  padding: 30rpx 40rpx;
  position: relative
}


.contain-item-imgBox{
  position: relative
}
.contain-item-box-cover{
  width: 100%;
  height: 110rpx;
  background: rgba(0, 0, 0, .4);
  position: absolute;
  bottom: 0;
  left: 0;
  box-sizing: border-box;
  padding: 24rpx 50rpx;
}
.contain-item-box-cover progress{
  padding-bottom: 6rpx
}
.contain-item-box-cover-progress{
  color: #EBEBEB;
  font-size: 24rpx;
  line-height: 260%
}
.contain-item-box-cover-progress view:first-of-type{
  float: left
}
.contain-item-box-cover-progress view:last-of-type{
  float: right;
  margin-top: -4rpx
}
.contain-item-box-cover-progress view:last-of-type image{
  width: 36rpx;
  height: 36rpx;
  display: inline-block;
  vertical-align: middle;
  margin-right: 10rpx
}
.contain-item-box-cover-progress view:last-of-type text{
  height: 36rpx;
  line-height: 36rpx;
  vertical-align: middle;
  display: inline-block;
}

.contain-item-box-tit{
  font-size: 34rpx;
  font-weight: 600;
  padding-bottom: 36rpx
}
.contain-item-box-des{
  font-size: 28rpx;
}


.contain-item-detail{
  width: 100%;
  text-align: left;
  overflow: hidden
}
.contain-item-detail image{
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  display: block;
  float: left
}
.contain-item-detail>view{
  height: 70rpx;
  line-height: 70rpx;
  float: right;
  margin-left: 20rpx;
  font-size: 26rpx;
  color: #C5C5C5
}
.contain-item-detail>view:first-of-type{
  height: 70rpx;
  line-height: 70rpx;
  float: left;
  margin-left: 20rpx;
  font-size: 26rpx;
  color: #333
}

.contain-item-detail-in{
  padding: 20rpx 0 20rpx;
  border-bottom: 2rpx #E5E5E5 solid;
  margin-bottom: 30rpx
}
.contain-item-detail-inheaderBox{
  width: 76%;
  margin-left: 0!important;
  padding: 10rpx 0;
  height: 50rpx!important;
  line-height: 50rpx!important;
  white-space:nowrap;
  overflow: hidden
}
.contain-item-detail-inheaderBox scroll-view{
  height: 100%;
}
.contain-item-detail-inheaderBox scroll-view > view{
  white-space:nowrap;
}
.contain-item-detail-in image{
  width: 50rpx;
  height: 50rpx;
  display: inline-block;
  margin-right: 14rpx
}

::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}


.weui-navbar__item.weui-bar__item_on{
  color: #333
}
.weui-navbar__item{
  color: #C7C7C7;
}

page{
  padding-bottom: 200rpx
}
/* contain-nav */
.contain-nav{
  position: fixed;
  bottom: 0;
  left: 0;
  background: #fff;
  width: 100%;
  height: 100rpx;
  z-index: 998
}
.contain-nav>view{
  display: inline-block;
  padding: 10rpx 0;
  width: 18%;
  height: 100%;
  font-size: 20rpx;
  text-align: center;
  box-sizing: border-box
}
.contain-nav>view image{
  margin: 0 auto;
  display: block;
  width: 50rpx;
  height: 50rpx
}
.contain-nav>view:last-of-type{
  display: inline-block;
  padding: 10rpx 0;
  width: 26%;
  padding-top: 18rpx
}
.contain-nav>view:last-of-type button{
  width: 90%;
  font-size: 25rpx;
  border-color: #04BE02;
  color: #04BE02;
}
.weui-navbar {
  border-bottom:1rpx solid #E5E5E5;
}



/* noOne */
.noOne{
  width: 100%;
  min-height: 300rpx;
  font-size: 24rpx;
  text-align: center;
  color: #C7C7C7;
  line-height: 80rpx;
  padding-top: 50rpx;
  box-sizing: border-box
}